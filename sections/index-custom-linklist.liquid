<div class="container_big {% if section.settings.background_toggle %}with_background" style="background-color: {{ section.settings.bg_color }}"{% endif %}>
  <div class="row">

    {% for block in section.blocks %}
        {%- assign block_width = 'col-sm-12' -%}

        {% case block.settings.width %}
            {% when '15%' %}
                {%- assign block_width = 'col-sm-2' -%}
                {%- assign img_size = '170x170' -%}
            {% when '25%' %}
                {%- assign block_width = 'col-sm-3' -%}
                {%- assign img_size = '270x270' -%}
            {% when '33%' %}
                {%- assign block_width = 'col-sm-4' -%}
                {%- assign img_size = '370x370' -%}
            {% when '50%' %}
                {%- assign block_width = 'col-sm-6' -%}
                {%- assign img_size = '570x270' -%}
            {% when '66%' %}
                {%- assign block_width = 'col-sm-8' -%}
                {%- assign img_size = '770x370' -%}
            {% when '75%' %}
                {%- assign block_width = 'col-sm-9' -%}
                {%- assign img_size = '870x270' -%}
            {% when '100%' %}
                {%- assign block_width = 'col-sm-12' -%}
                {%- assign img_size = '1170x270' -%}
        {% endcase %}

        <div class="{{ block_width }} col_item {% cycle 'step7': 'item_7_1', '', '', '', '', '', 'item_1_1' %}">
            <div class="custom_linklist__item item_{{ block.type }}">
                {% case block.type %}

                    {% when 'links' %}
                        <div class="item_links">
                            {% if block.settings.link.size > 0 and block.settings.link_txt.size > 0 %}
                                <a class="links" href="{{ block.settings.link }}">{{ block.settings.link_txt }}</a>
                            {% endif %}
                        </div>


                {% endcase %}
            </div>
        </div>

    {% endfor %}
 </div>	
</div>


{% schema %}
{
	"name": "Custom linklist",
	"class": "section section_homepage section_custom-linklist",
	"settings": [
		{
			"type": "checkbox",
			"id": "background_toggle",
			"label": "Show background color",
			"default": true
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#ffffff"
		}
	],
	"blocks": [

		// Links ///////////////////////////////////////////////////////////////////////////////////////////
		{
			"type": "links",
			"name": "Links",
			"settings": [
				{
					"type": "url",
					"id": "link",
					"label": "Link"
				},
				{
					"type": "text",
					"id": "link_txt",
					"label": "Link text"
				},
				{
					"type": "select",
					"id": "width",
					"label": "Container width",
					"default": "50%",
					"options": [
						{
							"value": "15%",
							"label": "15%"
						},
						{
							"value": "25%",
							"label": "25%"
						},
						{
							"value": "33%",
							"label": "33%"
						},
						{
							"value": "50%",
							"label": "50%"
						},
						{
							"value": "66%",
							"label": "66%"
						},
						{
							"value": "75%",
							"label": "75%"
						},
						{
							"value": "100%",
							"label": "100%"
						}
					]
				}
			]
		}
		
	],
	"presets": [
		{
			"name": "Custom linklist",
			"category": "Advanced layout",
			"blocks": [
				{
					"type": "links"
				},
				{
					"type": "links"
				}
			]
		}
	]
}
{% endschema %}